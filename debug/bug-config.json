{
  "scripts": {
    "sleep:$time": "node -e \"setTimeout(() => {}, $time)\"",
    "background:$job:$time": [
      "echo Background job: $job",
      "sleep:$time",
      "echo Done: $job"
    ],
    "build-stuff": {
      "concurrent": [
        "background:1:3000",
        "background:2:4000"
      ],
      "sequential": [
        "echo Sequential 1",
        "sleep:1000",
        "echo Sequential 2",
        "sleep:1000"
      ]
    }
  },
  "scripts33": {
    "job:$name": "echo Job: $name && sleep 2 && echo Done: $name",
    "build-stuff-1": {
      "concurrent": [
        "job:1",
        "job:2"
      ],
      "sequential": [
        "job:3",
        "job:4"
      ]
    },
    "build-stuff-2": {
      "concurrent": [
        "job:1",
        "job:2"
      ]
    },
    "build-stuff-3": [
      "job:1",
      "job:2"
    ]
  }
}