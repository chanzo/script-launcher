{
  "printWidth": 200,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "preserve",
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "semi": true,
        "printWidth": 24
      }
    },
    {
      "files": "*.md",
      "options": {
        "semi": true,
        "printWidth": 24
      }
    }
  ]
}
