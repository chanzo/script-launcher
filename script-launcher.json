{
  "scripts": {
    "lint": "tslint --config tslint.json 'src/**/*.ts'",
    "build": [
      "echo Building node package...",
      "npm start lint",
      "rm -rf ./dist",
      "tsc --build",
      "cp ./src/package.json ./dist/",
      "cp ./src/README.md ./dist",
      "cp ./src/LICENSE ./dist",
      "mkdir ./dist/bin",
      "cp ./src/bin/launch.js ./dist/bin/launch.js",
      "echo Done..."
    ],
    "publish": [
      "echo Not implemented."
    ]
  },
  "menu": {
    "": {
      "description": "action",
      "package": "npm --silent start build",
      "publish": "npm --silent start publish",
      "help": "echo Not implemented."
    }
  },
  "configurations": {
    "logLevel": 0,
    "script": {
      "shell": ""
    },
    "menu": {
      "default": "build:package"
    }
  }
}