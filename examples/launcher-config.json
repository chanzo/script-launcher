{
  "scripts": {
    "sequential": {
      "sequential": [
        "echo Sequential 1 && sleep 10",
        "echo Sequential 2 && sleep 10"
      ]
    },
    "concurrent": {
      "concurrent": [
        "echo Concurrent 1 && sleep 10",
        "echo Concurrent 2 && sleep 10"
      ]
    },
    "bug": {
      "concurrent": [
        "sequential",
        "sequential",
        "echo 1"
      ]
    },
    "error": [
      "echo \"1: $(pwd)\"",
      "..",
      "echo \"2: $(pwd)\"",
      "..",
      "echo \"3: $(pwd)\"",
      "..",
      "echo \"4: $(pwd)\"",
      "..",
      "sdfgsdg",
      "echo \"5: $(pwd)\""
    ],
    "dir": [
      "../../../",
      "pwd",
      "echo hallo",
      "echo test: $(pwd)"
    ],
    "lookup01": "echo Lookup 01 && echo Lookup 02 $(readlink /proc/$$/exe)",
    "lookup02:$param1": "\"echo Lookup 02 param1=$param1\"",
    "lookup03:$param1:$param2": "echo Lookup 03 param1=$param1  param2=$param2",
    "lookup04:$param1:$param2": [
      "lookup03:$param1:1$param2",
      "lookup03:$param1:2$param2"
    ],
    "lookup": [
      "echo lookup",
      "lookup01",
      "lookup02:AA",
      "lookup03:AA:BB"
    ],
    "serve:$PROJECT:dev": {
      "concurrent": [
        "endpoint:start",
        "serve:$PROJECT:dev"
      ]
    },
    "serve:$PROJECT:dev2": {
      "sequential": [
        "endpoint:start",
        "serve:$PROJECT:dev"
      ]
    },
    "serve:$PROJECT:$CONFIGURATION": "echo ng serve --project=$PROJECT --configuration=$CONFIGURATION",
    "build2:  $PROJECT  :$CONFIGURATION": [
      "echo 1 ng build --prod --no-progress --project=$PROJECT --configuration=$CONFIGURATION && sleep 2",
      "echo 2 ng build --prod --no-progress --project=$PROJECT --configuration=$CONFIGURATION && sleep 2"
    ],
    "deploy:  $PROJECT  :$CONFIGURATION": "echo Deploying: PROJECT=$PROJECT  CONFIGURATION=$CONFIGURATION",
    "build:  $PROJECT  :$CONFIGURATION": "echo Building: PROJECT=$PROJECT  CONFIGURATION=$CONFIGURATION",
    "build:  $PROJECT  :all": [
      "echo aa $0 $1 $2",
      "echo set"
    ],
    "build3:  $PROJECT  :$CONFIGURATION": {
      "constraints": {
        "PROJECT": "uva|hva",
        "CONFIGURATION": "dev|tst|acc|prd"
      },
      "concurrent": [
        "echo 1 ng build --prod --no-progress --project=$PROJECT --configuration=$CONFIGURATION && sleep 4 && echo done 1",
        "echo 2 ng build --prod --no-progress --project=$PROJECT --configuration=$CONFIGURATION && sleep 5 && echo done 2"
      ],
      "sequential": [
        "echo sequential 1 && sleep 1",
        "echo sequential 2 && sleep 1",
        "echo sequential 3 && sleep 1"
      ]
    }
  },
  "menu": {
    "description": "action",
    "build": {
      "description": "organization",
      "uva": {
        "description": "environment",
        "development": "build:uva:dev",
        "test": "build:uva:tst",
        "acceptance": "build:uva:acc",
        "production": "build:uva:prd"
      },
      "hva": {
        "description": "environment",
        "development": "build:hva:dev",
        "test": "build:hva:tst",
        "acceptance": "build:hva:acc",
        "production": "build:hva:prd"
      }
    },
    "deploy": {
      "description": "organization",
      "uva": {
        "description": "environment",
        "development": "deploy:uva:dev",
        "test": "deploy:uva:tst",
        "acceptance": {
          "concurrent": [
            "deploy:uva:acc"
          ],
          "sequential": [
            "deploy:uva:acc"
          ]
        },
        "acceptance2": [
          "deploy:uva:acc",
          "deploy:uva:acc",
          "deploy:uva:acc",
          "deploy:uva:acc"
        ],
        "acceptance3": {},
        "production": "deploy:uva:prd"
      },
      "hva": {
        "description": "environment",
        "development": "deploy:hva:dev",
        "test": "deploy:hva:tst",
        "acceptance": "deploy:hva:acc",
        "production": "deploy:hva:prd"
      }
    }
  },
  "options": {
    "logLevel": 1,
    "files": [
      "../launcher-menu.json",
      "../launcher-custom.json"
    ],
    "script": {
      "shell0": true
    },
    "menu": {
      "default": "deploy:uva:acceptance"
    }
  }
}
