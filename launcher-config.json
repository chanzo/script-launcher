{
  "scripts": {
    "lint": "tslint --config tslint.json src/**/*.ts",
    "build": [
      "echo Building node package...",
      "lint",
      "rm -rf ./dist",
      "tsc --build",
      "cp ./src/package.json ./dist/",
      "cp ./src/README.md ./dist",
      "cp ./src/LICENSE ./dist",
      "mkdir ./dist/bin",
      "cp ./src/bin/launch.js ./dist/bin/launch.js",
      "echo Done..."
    ],
    "debug:$script": [
      "lint",
      "ts-node src/launch.ts --logLevel=2 --config=debug/launcher-config.json arg0"
    ]
  },
  "menu": {
    "description": "action",
    "build package": "build"
  },
  "options": {
    "logLevel": 0
  }
}