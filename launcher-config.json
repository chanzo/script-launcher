{
  "scripts": {
    "lint": "tslint --config tslint.json src/**/*.ts",
    "build": [
      "echo Building node package...",
      "lint",
      "rm -rf ./dist",
      "tsc --build",
      "cp ./src/package.json ./dist/",
      "cp ./src/README.md ./dist",
      "cp ./src/LICENSE ./dist",
      "mkdir ./dist/bin",
      "cp ./src/bin/launch.js ./dist/bin/launch.js",
      "echo Done..."
    ],
    "postinstall": [
      "debug",
      "npm install"
    ],
    "test": [
      "tests",
      "tsc",
      "../dist-test",
      "jest --verbose"
    ]
  },
  "menu": {
    "description": "action",
    "build": "build",
    "test": "test"
  },
  "options": {
    "logLevel": 0
  }
}