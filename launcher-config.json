{
  "scripts": {
    "lint": [
      "echo Linting sources files...",
      "tslint --project src $*",
      "tslint --project tests $*",
      "echo No lint errors found...",
      ""
    ],
    "build": [
      "lint",
      "echo Building node package...",
      "rm -rf ./dist/package",
      "tsc --build src",
      "cp src/package.json dist/package",
      "cp src/README.md dist/package",
      "cp src/LICENSE dist/package",
      "mkdir dist/package/bin",
      "cp src/bin/launch.js dist/package/bin/launch.js",
      "echo Done..."
    ],
    "postinstall": [
      "debug",
      "npm install"
    ],
    "test": [
      "lint",
      "#rm -rf ./dist/test",
      "#tsc --build tests",
      "jest --verbose $*"
    ]
  },
  "options": {
    "logLevel": 0
  }
}
