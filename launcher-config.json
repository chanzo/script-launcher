{
  "scripts": {
    "lint2": "tslint --config tslint.json src/**/*.ts",
    "lint": [
      "echo Linting sources files...",
      "#tslint --project src $*",
      "echo No lint errors found...",
      ""
    ],
    "build": [
      "lint",
      "echo Building node package...",
      "rm -rf dist",
      "tsc --build",
      "#cp src/package.json dist",
      "#cp src/README.md dist",
      "#cp src/LICENSE dist",
      "#mkdir dist/bin",
      "#cp src/bin/launch.js dist/bin/launch.js",
      "echo Done..."
    ],
    "postinstall": [
      "debug",
      "npm install"
    ],
    "test": [
      "test-methods",
      "jest --verbose"
    ]
  },
  "menu": {
    "description": "action",
    "build": "build",
    "test": "test"
  },
  "options": {
    "logLevel": 0
  }
}
